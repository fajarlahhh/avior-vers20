include includes/header
body(class="fix-menu")
    div(class="theme-loader")
        div(class="ball-scale")
            div(class='contain')
                div(class="ring")
                    div(class="frame")
                div(class="ring")
                    div(class="frame")
                div(class="ring")
                    div(class="frame")
                div(class="ring")
                    div(class="frame")
                div(class="ring")
                    div(class="frame")
                div(class="ring")
                    div(class="frame")
                div(class="ring")
                    div(class="frame")
                div(class="ring")
                    div(class="frame")
                div(class="ring")
                    div(class="frame")
                div(class="ring")
                    div(class="frame")
    section(class="login-block")
        div(class="container-fluid")
            div(class="row")
                div(class="col-sm-12")
                    form(class="md-float-material form-material" action="/signup" method="POST")
                        div(class="text-center")
                            img(src="/images/logo.png" alt="logo.png")
                        div(class="auth-box card")
                            div(class="card-block")
                                input(type="hidden" id="captcha" name="captcha")
                                div(class="row m-b-20")
                                    div(class="col-md-12")
                                        h3(class="text-center txt-primary") Sign Up 
                                div(class="form-group form-primary")
                                    input(type="text" name="username" class="form-control" placeholder="Username")
                                    span(class="form-bar")
                                div(class="form-group form-primary")
                                    input(type="email" name="email" class="form-control" placeholder="Email Address")
                                    span(class="form-bar")
                                div(class="form-group form-primary")
                                    select(name="select" class="form-control")
                                        option(value="" selected disabled hidden) Choose Package
                                        each row, index in packages ? packages : [] 
                                            option(value=row.id) #{row.name}
                                    span(class="form-bar")
                                div(class="form-group form-primary")
                                    input(type="password" name="password" class="form-control" placeholder="Password")
                                    span(class="form-bar")
                                div(class="row m-t-25 text-left")
                                    div(class="col-md-12")
                                        div(class="checkbox-fade fade-in-primary")
                                            label
                                                input(type="checkbox" value="")
                                                span(class="cr")
                                                    i(class="cr-icon icofont icofont-ui-check txt-primary")
                                                span(class="text-inverse") I read and accept 
                                                    a(href="#") Terms &amp; Conditions.
                                div(class="row m-t-30")
                                    div(class="col-md-12")
                                        button(type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20") Sign up now 
                                hr
                                div(class="row")
                                    div(class="col-md-10")
                                        p(class="text-inverse text-left m-b-0") Thank you
                                    div(class="col-md-2")
                                        img(src="/images/small-logo.png" alt="small-logo.png")
    include includes/footer
    script(src="https://www.google.com/recaptcha/api.js?render=6LeqoyQfAAAAADiHkt2nNb1rpSFCdb2rZB3jRtKW")
    script.
        grecaptcha.ready(function () {
            grecaptcha.execute('#{siteKey}', { action: "/createsession" }).then(function (token) {
                document.getElementById("captcha").value = token;
            });
        });