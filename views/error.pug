include includes/header
body(class="background show-spinner no-footer")
    main
        div(class="container") 
            div(class="row h-100") 
                div(class="col-12 col-md-10 mx-auto my-auto") 
                    div(class="card auth-card") 
                        div(class="position-relative image-side ") 
                            p(class=" text-white h2") MAGIC IS IN THE DETAILS
                            p(class="white mb-0") Please use this form to register.
                            p(class="white mb-0") If you are a member, please
                                a(href="#" class="white") &nbsp;login.
                        div(class="form-side") 
                            a(href="Dashboard.Default.html")
                                span(class="logo-single")
                            h6(class="mb-4") Sign Up 
                            form(class="md-float-material form-material" action="/signup" method="POST")
                                input(type="hidden" id="captcha" name="captcha")
                                label(class="form-group has-float-label mb-4") 
                                    input(type="text" name="username" class="form-control")
                                    span Username 
                                label(class="form-group has-float-label mb-4") 
                                    input(type="email" name="email" class="form-control")
                                    span E-mail Address
                                label(class="form-group has-float-label mb-4")
                                    select(name="select" class="form-control")
                                        option(value="" selected disabled hidden) Package
                                        each row, index in packages ? packages : [] 
                                            option(value=row.id) #{row.name}
                                    span Package
                                label(class="form-group has-float-label mb-4") 
                                    input(class="form-control" type="password" placeholder="") 
                                    span Password 
                                hr
                                label(class="form-group has-float-label mb-4") 
                                    input(type="text" name="refferal" class="form-control" )
                                    span Refferal 
                                div(class="d-flex justify-content-end align-items-center") 
                                    button(class="btn btn-primary btn-lg btn-shadow" type="submit") REGISTER
    include includes/footer